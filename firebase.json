{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "serve.py",
      "watch-and-sync.py",
      "deploy-to-rpi.bat",
      "dev-server.bat",
      ".claude/**",
      ".git/**",
      "tools/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/KPS/",
        "type": 302
      }
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          },
          {
            "key": "Pragma",
            "value": "no-cache"
          },
          {
            "key": "Expires",
            "value": "0"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      }
    ],
    "cleanUrls": false,
    "trailingSlash": false
  }
}