{
  "name": "@kinben/api-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Kinben system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "deploy": "firebase deploy --only functions",
