  "dependencies": {
    "@kinben/shared-types": "workspace:*",
    "@kinben/data-model": "workspace:*",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "firebase-tools": "^12.0.0"
  },
  "engines": {
    "node": "18"
  }
}